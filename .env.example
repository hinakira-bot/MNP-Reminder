# Discord Bot Token (Discord Developer Portal から取得)
DISCORD_TOKEN=

# Discord Application ID (Discord Developer Portal から取得)
DISCORD_CLIENT_ID=

# 開発用サーバーID（任意。省略するとグローバル登録）
DISCORD_GUILD_ID=

# SQLite データベースファイルのパス
DATABASE_PATH=./data/mnp-tracker.db

# デフォルトのリマインド閾値（日数）
DEFAULT_REMINDER_DAYS=3

# デフォルトのリマインドチェック時刻（JST）
DEFAULT_REMINDER_TIME=09:00

# タイムゾーン
TIMEZONE=Asia/Tokyo

# ボタン連打防止のクールダウン（秒）
BUTTON_COOLDOWN_SECONDS=60
